#!/usr/bin/env node

import 'dotenv/config';
import http from 'http';
import debugLib from 'debug';
import app from '../app.js';
import sequelize from '../src/config/database.js';
import { env } from '../src/config/env.js';

const debug = debugLib('microservice-seance:server');
const port = normalizePort(env.port);

app.set('port', port);

const server = http.createServer(app);

const startServer = async () => {
  try {
    await sequelize.authenticate();
    console.log('âœ… MySQL connectÃ©');

    await sequelize.sync({ alter: env.shouldSyncAlter });
    console.log('ðŸ—„ï¸  Database synced');

    server.listen(port);
    server.on('error', (error) => onError(error, port));
    server.on('listening', () => onListening(server));
  } catch (error) {
    console.error('âŒ Unable to start server:', error);
    process.exit(1);
  }
};

startServer();

function normalizePort(val) {
  const parsedPort = parseInt(val, 10);

  if (Number.isNaN(parsedPort)) {
    return val;
  }

  if (parsedPort >= 0) {
    return parsedPort;
  }

  return false;
}

function onError(error, portValue) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  const bind = typeof portValue === 'string' ? `Pipe ${portValue}` : `Port ${portValue}`;

  switch (error.code) {
    case 'EACCES':
      console.error(`${bind} requires elevated privileges`);
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(`${bind} is already in use`);
      process.exit(1);
      break;
    default:
      throw error;
  }
}

function onListening(serverInstance) {
  const addr = serverInstance.address();
  const bind = typeof addr === 'string' ? `pipe ${addr}` : `port ${addr.port}`;
  debug(`Listening on ${bind}`);
}
